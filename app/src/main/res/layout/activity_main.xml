<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:id="@+id/main_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="@dimen/photo_height"
            android:scaleType="centerCrop"
            android:src="@drawable/my" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_super"
            android:layout_marginTop="@dimen/margin_small">

            <ImageView
                android:layout_width="@dimen/bmstu_param"
                android:layout_height="@dimen/bmstu_param"
                android:layout_gravity="center"
                android:src="@drawable/bmstu" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_small"
                android:text="@string/bmstu_student"
                android:textSize="@dimen/text_size" />
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/line"
            android:layout_marginLeft="@dimen/margin_super"
            android:layout_marginRight="@dimen/margin_big"
            android:layout_marginTop="@dimen/margin_big"
            android:background="@color/line_color" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_super"
            android:layout_marginRight="@dimen/margin_big"
            android:layout_marginTop="@dimen/margin_big"
            android:text="@string/about_text"
            android:textSize="@dimen/text_size"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/line"
            android:layout_marginLeft="@dimen/margin_super"
            android:layout_marginRight="@dimen/margin_big"
            android:layout_marginTop="@dimen/margin_big"
            android:background="@color/line_color" />

        <EditText
            android:id="@+id/message_text"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/margin_super"
            android:layout_marginRight="@dimen/margin_big"
            android:layout_marginTop="@dimen/margin_big"
            android:hint="@string/edit"
            android:inputType="textCapSentences"/>

        <TextView
            android:id="@+id/message_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorAccent"
            android:text="@string/button"
            android:layout_gravity="right"
            android:textSize="@dimen/text_size"
            android:layout_marginRight="@dimen/margin_big"
            android:layout_marginTop="@dimen/margin_big"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_margin="@dimen/margin_big"
            android:gravity="center_horizontal|center_vertical">

            <ImageView
                android:id="@+id/telegram"
                android:layout_width="@dimen/resourse_param"
                android:layout_height="@dimen/resourse_param"
                android:layout_gravity="center"
                android:src="@drawable/telegram"
                android:layout_marginRight="@dimen/margin_small"/>

            <ImageView
                android:id="@+id/instagram"
                android:layout_width="@dimen/resourse_param"
                android:layout_height="@dimen/resourse_param"
                android:layout_gravity="center"
                android:src="@drawable/instagram"
                android:layout_marginLeft="@dimen/margin_small"/>

        </LinearLayout>

    </LinearLayout>

</ScrollView>